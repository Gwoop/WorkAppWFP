<Window x:Class="WorkAppWFP.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkAppWFP"
        mc:Ignorable="d"
        MinHeight="190"
        MinWidth="508"
        MaxHeight="190"
        MaxWidth="508"
        Title="Настройки подключения к серверу" Height="190" Width="508" Icon="image/speed_test_computer_pc_time_clock_icon_193930.ico">
    <Window.Background>
        <ImageBrush ImageSource="image/fon.jpg" />
    </Window.Background>

    <Grid>
        <TextBox MaxLength="24" x:Name="Path" HorizontalAlignment="Center" Margin="0,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="376"/>
        <Label Content="Строка подключения (ip адрес и порт)" HorizontalAlignment="Left" Margin="66,25,0,0" VerticalAlignment="Top" Width="126"/>
        <Button Content="Сохранить" HorizontalAlignment="Center" Margin="0,110,0,0" VerticalAlignment="Top" Click="Button_Setting_Save"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="396,110,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
